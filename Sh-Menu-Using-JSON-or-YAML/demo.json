{
    "menuTitle": "General Operations Menu",
    "footerMessage": "Choose an option or press 0 to exit.",
    "colors": {
        "header": "blue",
        "option": "green",
        "error": "red",
        "command": "yellow"
    },
    "options": [
        {
            "name": "Create-File",
            "command": "touch new_file.txt && echo 'Created new_file.txt'"
        },
        {
            "name": "List-Dir",
            "command": "ls -la && echo 'Listed files and directories'"
        },
        {
            "name": "Show-Info",
            "command": "uname -a && echo 'Displayed system info'"
        },
        {
            "name": "Show-Date",
            "command": "date && echo 'Displayed current date and time'"
        }
    ],
    "defaultOption": 1,
    "inputPrompt": "Select an operation:",
    "allowExit": true,
    "helpCommand": "echo 'Help: Choose an operation by number.'",
    "confirmExecution": true,
    "logFile": "operations_log.txt"
}
